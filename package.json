{
  "name": "pastelight",
  "productName": "pastelight",
  "description": "Photo organizer",
  "version": "0.1.0",
  "author": "deseteral@gmail.com",
  "license": "MIT",
  "main": "build/main.js",
  "build": {
    "appId": "xyz.deseteral.pastelight",
    "files": [
      "build/**/*"
    ],
    "extraFiles": [
      {
        "from": "binary_deps",
        "to": "Resources/binary_deps",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "scripts": {
    "start": "electron build/main.js",
    "dev": "npm run build && npm run compile:watch",
    "build": "npm run clean && npm run build:assets && npm run compile",
    "build:assets": "gulp",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "clean": "rimraf build",
    "test": "npm run unit && npm run unit:eslint-rules && npm run lint",
    "unit": "node ./config/run-unit-tests.js",
    "unit:eslint-rules": "node ./config/eslint-plugin-pastelight/tests.js",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "pack:dist": "rimraf dist && npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "pack:exec": "npm run pack:dist -- --dir",
    "install": "node ./config/install-native-binaries.js"
  },
  "dependencies": {
    "electron-devtools-installer": "3.0.0",
    "electron-root-path": "1.0.16",
    "nedb": "1.8.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "rxjs": "6.5.5",
    "sharp": "0.25.2",
    "styled-components": "5.1.0"
  },
  "devDependencies": {
    "@deseteral/eslint-config": "2.1.1",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "25.2.1",
    "@types/nedb": "1.8.9",
    "@types/node": "12.12.6",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.7",
    "@types/rimraf": "3.0.0",
    "@types/sharp": "0.25.0",
    "@types/styled-components": "5.1.0",
    "coveralls": "3.1.0",
    "cross-env": "7.0.2",
    "electron": "8.5.2",
    "electron-builder": "22.6.0",
    "eslint": "6.8.0",
    "eslint-plugin-pastelight": "file:config/eslint-plugin-pastelight",
    "gulp": "4.0.2",
    "jest": "25.5.3",
    "jest-watch-typeahead": "0.5.0",
    "node-fetch": "2.6.0",
    "rimraf": "3.0.2",
    "ts-jest": "25.4.0",
    "typescript": "3.8.3"
  },
  "nativeDependencies": {
    "pastelogue": "0.5.0"
  }
}
