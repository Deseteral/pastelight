{
  "extends": "@deseteral/eslint-config/typescript",
  "settings": {
    "import/core-modules": [
      "electron"
    ]
  },
  "plugins": [
    "eslint-plugin-pastelight"
  ],
  "rules": {
    "max-len": ["error", 120],
    "pastelight/import-only-module-index": "error",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/__tests__/**",
          "./config/**",
          "gulpfile.js"
        ],
        "optionalDependencies": false
      }
    ],
    "react/destructuring-assignment": "off"
  }
}
